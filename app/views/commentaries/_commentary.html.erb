<div class="jumbotron" id=<%= post_path(commentary.id) %>>
  <div class="row">
    <!-- Mostrar el contenido del comentario -->
    <h3><%if commentary.user_id%>
          <%= image_tag(User.find(commentary.user_id).avatar, alt: User.find(commentary.user_id).username,size: "50")%>
        <%end%>
        <%= markdown(commentary.text) %></h3>
    <div>
      
    </div>
    <h5>
        <% usr = ""%>
        <%if commentary.user_id %>
          <%usr = User.find(commentary.user_id).username %> 
        <% end %>
        Publicado por: <%= usr.capitalize%>
    </h5>
    <div>
      Total de votos: <%= commentary.votes.size%>
    </div>
  </div>
</div>
