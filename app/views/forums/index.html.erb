<div class="container">
  <!-- Espacio con alerta de desarrollo -->
  <div class="alert alert-danger" role="alert">
    La aplicación se encuentra aún en desarrollo
  </div>
  <%if user_signed_in?()%>
    <%= link_to("Create Forum", new_post_path(), html_options = {class: "btn btn-primary active"}) %>
  <%end%>
  <!-- Espacio para mostrar los fotos en la aplicación -->
  <div class="row">
    <!-- Renderear cada post -->
    <%= render(@posts) %>
  </div>
</div>