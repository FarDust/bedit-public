<div class="jumbotron">
  <div class="row">
    <h3>Registrarse</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"form-horizontal") do |f| %>
    <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label(:email) %><br />
        <%= f.email_field(:email, autofocus: true, autocomplete: "email", class: "form-control") %>
      </div>

      <div class="form-group">
        <%= f.label(:username) %><br />
        <%= f.text_field(:username, autocomplete: "username", class: "form-control") %>
      </div>

      <div class="form-group">
        <%= f.label("ContraseÃ±a") %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field(:password, autocomplete: "off", class: "form-control") %>
      </div>

      <div class="form-group">
        <%= f.label("Confirmar contraseÃ±a") %><br />
        <%= f.password_field(:password_confirmation, autocomplete: "off", class: "form-control") %>
      </div>

      <div class="form-group">
        <%= f.submit("Registrarse", class: "btn btn-primary active") %>
      </div>
    <% end %>

    <%= render("devise/shared/links") %>
  </div>
</div>
