<h2>Create new forum</h2>

<div class='container'>
  <%= form_for(:post, url: posts_path()) do |f| %>
    <div class='form-group'>
      <% f.label(:category) %><br />
      <% f.collection_select(:category, Category.all, :id , :name ,{prompt: 'Select a Forum',include_blank: "Please select", class: "form-control"}) %>
    </div>
    <div class="field">
      <%= f.label(:tittle) %><br />
      <%= f.text_field(:tittle) %>
    </div>
    <div class="field">
      <%= f.label(:content) %><br />
      <%= f.text_field(:content) %>
    </div>
    <div class="actions">
      <%= f.submit("Create") %>
  </div>
  <% end %>
</div>