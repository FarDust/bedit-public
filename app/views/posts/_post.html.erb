<div class="col-sm-6 col-md-6" id=<%= post_path(post.id) %>>  
  <div class="thumbnail" style="height: 230px">
    <!-- En caso de querer mostrar una imagen (ToDo) -->
    <!-- <img src="..." alt="..."> -->
    <div class="caption">
      <!-- Titulo del foro -->
      <h3><%= truncate(post.title, :length => 40) %></h3>
      <!-- Descripción del foro -->
      <p><%= markdown(post.content) %></p>
      <!-- ToDo: Proximamente agregar botones de favoritos y ver más -->
      <p><a href="#" class="btn btn-primary" role="button">Ver más</a> <a href="#" class="btn btn-default" role="button">Agregar a favoritos</a></p>
    </div>
  </div>
</div>