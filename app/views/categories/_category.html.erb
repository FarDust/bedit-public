  <div class="thumbnail" style="height: 230px">
    <div class="caption">
      <h3 style='margin: 0;position: absolute; top: 50%; left: 50%; margin-right: -50%; transform: translate(-50%, -50%)'>
        <%= truncate(category.name, :length => 40) %>
      </h3>
      <%= link_to("Ver MÃ¡s", "#{communities_path()}/#{category.id}",
                  html_options = {class: "btn btn-primary active"}) %>
      <% if user_signed_in?()%>
        <% if Subscription.where(category: category, user: current_user).length > 0 %>
          <%= link_to(subscribe_path(id: category.id),method: :delete,
                    class: 'btn btn-default') do%>
            Suscrito <%= category.subcribers%>
          <% end %>
        <% else %>
          <%= link_to(subscribe_path(id: category.id),method: :post, class: 'btn btn-danger') do %>
            Suscribirse <%= category.subcribers%>
          <% end %>
        <% end %>
        <% if not current_user.has_any_role?(:admin, {name: :moderator, resource: category})%>
          <%= link_to("Ser moderador", communities_moderator_path(category_id: category.id),
                      html_options = {class: "btn btn-secundary active"}) %>
        <% end%>
      <% end%>
      </p>
    </div>
  </div>
</div>
